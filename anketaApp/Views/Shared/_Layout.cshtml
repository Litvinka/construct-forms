<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – Конструктор форм</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if(Session["user_id"]==null){ @Html.ActionLink("Конструктор форм", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" }) }
                else
                {
                    @Html.ActionLink("Конструктор форм", "Index", "Forms", new { area = "" }, new { @class = "navbar-brand" }) }
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("главная", "Index", "Home")</li>*@
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <p class="col-md-12">&copy; @DateTime.Now.Year – конструктор форм</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="~/Scripts/required.js"></script>
    <script src="~/Scripts/CreateForm.js"></script>
    <script src="~/Scripts/large_file.js"></script>
    <script src="~/Scripts/Choose_school.js"></script>
</body>
</html>
