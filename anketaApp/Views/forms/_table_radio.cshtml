@model IEnumerable<anketaApp.Models.table_question>

<table class="table_form table @if (Model.Count()>0 && Model.ElementAt(0).question.is_required == true) { Write("required_table_radio"); }">
    <tr>
        <th></th>
        @foreach (var c in ViewBag.cols)
        {
            <th>@c.name</th>
        }
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.name</td>
            @foreach (var c in ViewBag.cols)
            {
                <td><label class="form_label"><input type="radio" name="table_@(item.id_question+"_"+item.id)" value="@c.id"/></label></td>
            }
        </tr>
    }
</table>

