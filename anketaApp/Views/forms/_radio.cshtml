@model IEnumerable<anketaApp.Models.variant>

<div class="form-group @if (Model.Count()>0 && Model.ElementAt(0).question.is_required == true) { Write("required_radio"); }">
    @foreach (var item in Model)
    {
        <label class="form_label"><input class="form-control" type="radio" value="@item.id" name="radio_@item.id_question"/> <span>@item.name</span></label>
    }
</div>

